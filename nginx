limit_req_zone $binary_remote_addr zone=mylimit:10m rate=2r/m;

server {
        listen 80 default_server;
        listen [::]:80 default_server;

        root /var/www/html;

        index index.html index.htm index.nginx-debian.html;

        server_name _;

        sub_filter_types text/html application/javascript text/javascript;
        sub_filter '{{API_URL_PLACEHOLDER}}' 'https://dashboard.mattmazer.dev/get-data';
        sub_filter_once off;

        location / {
                # First attempt to serve request as file, then
                # as directory, then fall back to displaying a 404.
                try_files $uri $uri/ =404;
        }

        location /add-visit {
        limit_req zone=mylimit;
        proxy_pass http://10.0.0.22:8080/add-visit;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
        }

        location /get-data {
        proxy_pass http://10.0.0.22:8080/user-data;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
        }
}



server {

        root /var/www/html;

        index index.html index.htm index.nginx-debian.html;
        server_name dashboard.mattmazer.dev; # managed by Certbot

        sub_filter_types text/html application/javascript text/javascript;
        sub_filter '{{API_URL_PLACEHOLDER}}' 'https://dashboard.mattmazer.dev/get-data';
                sub_filter_once off;

        location / {
                # First attempt to serve request as file, then
                # as directory, then fall back to displaying a 404.
                try_files $uri $uri/ =404;
        }

        location /add-visit {
        limit_req zone=mylimit;
        proxy_pass http://10.0.0.22:8080/add-visit;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;

        add_header 'Access-Control-Allow-Origin' 'https://www.mattmazer.dev';
        add_header 'Access-Control-Allow-Methods' 'POST, OPTIONS';
        add_header 'Access-Control-Allow-Headers' 'Origin, X-Requested-With, Content-Type, Accept';

        if ($request_method = 'OPTIONS') {
            return 204;
        }
        }

        location /get-data {
        proxy_pass http://10.0.0.22:8080/user-data;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
        }


    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/dashboard.mattmazer.dev/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/dashboard.mattmazer.dev/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
    if ($host = dashboard.mattmazer.dev) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80 ;
    listen [::]:80 ;
    server_name dashboard.mattmazer.dev;
    return 404; # managed by Certbot
}